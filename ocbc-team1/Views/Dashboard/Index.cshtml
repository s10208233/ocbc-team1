@model IEnumerable<ocbc_team1.Models.BankAccount>
@{
    ViewData["Title"] = "Dashboard";
}
<div style="padding-top:100px; padding-bottom:100px; min-height:1200px;
            background-image:url('/images/white-brick.jpg');
            background-position:top;
            background-size:cover;
            background-repeat: no-repeat;
            ">
    <div style="max-width:800px; margin:auto;" class="p-5">
        <h2 class="pb-5">Your Accounts</h2>
        <head>
            <meta charset="utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <link rel="stylesheet" href="~/css/Transfer.css">
        </head>
        @{
            int counter = 0;

            //  Template loop, use when DAL ready.
            <span class="text-success">@TempData["SuccessMessage"]</span>

            @foreach (var item in Model)
            {
                <a class="clickToHistory" asp-action="TransferHistory" asp-controller="Dashboard" asp-route-AccountNumber="@item.AccountNumber">
                    <div class="container mx-auto shadow bg-white rounded p-5 mb-3">
                        <h4 class="pb-4">@item.AccountType Account - @item.AccountNumber</h4>
                        <div class="row justify-content-end">
                            <div class="col-4">Account Balance<br /> $@item.AmountAvaliable</div>
                            <div class="col-4">Total Balance<br /> $@item.AmountRemaining</div>
                        </div>
                    </div>
                </a>
                counter += 1;
            }
            @if (counter == 0)
            {
                <span style="color:red">No active accounts</span>
            }

        }
    </div>
</div>