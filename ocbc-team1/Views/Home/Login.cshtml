@model ocbc_team1.Models.LoginViewModel
@{
}

<div class="mx-auto shadow bg-white rounded" style="max-width:fit-content;">
    <form method="post" class="p-5" asp-controller="Home" asp-action="UserLogin">
        <fieldset class="FormContent">
            <h2 class="pt-3" style="min-width:350px;"> Online Banking </h2>
            <div class="col login-field p-0">
                <div class="form-group row" style="display: inline; margin-left: 0px;">
                    <label asp-for="AccessCode"
                           class="col-form-label"></label>
                    <div>
                        <input asp-for="AccessCode" class="form-control" />
                        <span asp-validation-for="AccessCode"
                              class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row" style="display:inline; margin-left:0px;">
                    <label asp-for="Pin"
                           class="col-form-label"></label>
                    <div>
                        <input asp-for="Pin" class="form-control" />
                        <span asp-validation-for="Pin"
                              class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row float-right">
                <span style="color:red;">@TempData["Message"]</span>
                <div>
                    <input type="submit" value="Login" class="btn text-white px-5 mr-3" style="background-color:red;"/>
                </div>
            </div>
        </fieldset>
    </form>
        <p class="p-4 bg-light">Don't have an account? <a href="">Sign up</a></p>
</div>
