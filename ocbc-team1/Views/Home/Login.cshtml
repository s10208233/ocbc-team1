@model ocbc_team1.Models.LoginViewModel
@{
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/login.css">
</head>

<form method="post" asp-action="Login">
    <fieldset class="FormContent">
        <h2 style="padding-left:15px;"> Online Banking </h2>
        <div class="col login-field" style="padding-left:0px;">
            <div class="form-group row" style="display: inline; margin-left: 0px;">
                <label asp-for="AccessCode"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 col-md-5">
                    <input asp-for="AccessCode" class="form-control" />
                    <span asp-validation-for="AccessCode"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="display:inline; margin-left:0px;">
                <label asp-for="Pin"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 col-md-5">
                    <input asp-for="Pin" class="form-control" />
                    <span asp-validation-for="Pin"
                          class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 col-md-5"> 
                <a asp-controller="User" asp-action="Index" class="LoginButton">Login</a>
            </div>
            <span style="color:red;">@TempData["Message"]</span>
        </div>
        <div class="form-group row">
            <p>
                Don't have an account? <a href="">
                    Sign up
                </a>
            </p>
        </div>
    </fieldset>
</form>